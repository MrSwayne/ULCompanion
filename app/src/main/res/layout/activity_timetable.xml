<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ie.swayne.ulcompanion.sulisActivity">

    <LinearLayout

        android:id="@+id/moduleList"
        android:layout_width="match_parent"
        android:layout_height="467dp"
        android:orientation="vertical"
        app:layout_anchor="@+id/container"
        app:layout_anchorGravity="bottom|center"
        android:background="@color/ULPurp">

    </LinearLayout>
        <android.support.design.widget.TabLayout
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabMode="scrollable"
            android:background="@color/ULPurp"
            app:tabTextColor="@color/grey"
            app:tabSelectedTextColor="@color/white"
            app:tabIndicatorColor="@color/white"
            >

            <android.support.design.widget.TabItem
                android:id="@+id/tabMonday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Monday" />

            <android.support.design.widget.TabItem
                android:id="@+id/tabTuesday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tuesday" />

            <android.support.design.widget.TabItem
                android:id="@+id/tabWednesday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wednesday" />

            <android.support.design.widget.TabItem
                android:id="@+id/tabThursday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thursday" />

            <android.support.design.widget.TabItem
                android:id="@+id/tabFriday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Friday" />

        </android.support.design.widget.TabLayout>


    <android.support.v4.view.ViewPager
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_anchor="@+id/tabs"
        app:layout_anchorGravity="bottom|center"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        app:layout_anchor="@+id/moduleList"

        app:layout_anchorGravity="bottom|center"
        app:menu="@menu/nav_bar"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="511dp"
        app:itemTextColor="@color/white"
        app:itemIconTint="@color/white"
        />

</android.support.design.widget.CoordinatorLayout>